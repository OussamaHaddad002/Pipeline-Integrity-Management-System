# Environment Configuration for Pipeline Risk Assessment Dashboard
# Copy this file to .env and update with your actual values

# Application Environment
NODE_ENV=development
PORT=5000

# Database Configuration
DATABASE_URL=postgresql://pipeline_user:pipeline_password@localhost:5432/pipeline_risk
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=pipeline_risk
DATABASE_USER=pipeline_user
DATABASE_PASSWORD=pipeline_password

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=24h

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=info

# Python AI Service
PYTHON_API_URL=http://localhost:8000

# Redis Cache (optional)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# File Upload Limits
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# External APIs
WEATHER_API_KEY=your-weather-api-key
MAPS_API_KEY=your-maps-api-key

# Monitoring and Analytics
SENTRY_DSN=https://your-sentry-dsn
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Development Tools
ENABLE_CORS_ALL=true
ENABLE_REQUEST_LOGGING=true
ENABLE_QUERY_LOGGING=false
